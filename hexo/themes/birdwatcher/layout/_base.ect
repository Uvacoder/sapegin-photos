<!doctype html>
<html lang="ru">
<head>
	<meta charset="utf-8">
	<title><%= @page_title() %></title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<%- @open_graph({title: @page_title(false), twitter_id: @theme.twitter}) %>
	<% if @page.noindex: %>
		<meta name="robots" content="noindex follow">
	<% end %>
	<% if @theme.rss: %>
	  <link rel="alternative" href="<%- @theme.rss %>" title="<%= @config.blog_title %>" type="application/atom+xml">
	<% end %>
	<link href="<%- @fingerprint '/build/styles.css' %>" rel="stylesheet">
	<script src="<%- @fingerprint '/build/modernizr.js' %>"></script>
	<script><%- @embed_file 'build/inlines/counters.js' %></script>
</head>
	<body class="<%= @body_class() %>">
		<% content %>
  </body>
</html>
