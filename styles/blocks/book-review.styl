.book-review {
	space(4);

	&__title {
		gamma();
		space();
	}

	&__year {
		margin-left: .5em;
		font-size: 16px;
	}

	&__translation {
		margin-bottom: 14px;
		font-size: normal_font;
		font-weight: normal;
		font-style: italic;
	}

	&__img {
		max-width: 120px;
		margin-top: 7px;
		margin-bottom: spacer;
	}

	&__rating {
		position: relative;

		&,
		&:before,
		i {
			height: 1.2em;
			line-height: 1;
			vertical-align: top;
			font-size: 17px;
			font-style: normal;
			letter-spacing: .2ex;
		}

		&:before {
			content: "★★★★★";
			position: absolute;
			color: rgba(base_color,.25);
		}

		i {
			display: inline-block;
			overflow: hidden;
			width: 1ex;
		}
	}
}
