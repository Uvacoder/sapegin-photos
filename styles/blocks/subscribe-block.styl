.subscribe-block {
	margin: 0 (-(2*spacer)) 2*spacer;
	padding: 2*spacer;
	background: #efefef;
	outline: 0 solid button_hover_color;
	transition: outline-width .05s ease-in-out;

	&.is-active {
		outline-width: 2px;
	}

	&__title {
		gamma();
		space(1.5);
	}

	&__form {
		space(1.5);
	}

	&__info {
		font-size: small_font;
	}
}
