.subscribe-popup {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	padding: 2*spacer;
	background: lighter_color;
	box-shadow: 0 2px 5px black(0.1);
	transition: transform 0.1s ease-in-out;

	&.is-hidden {
		transform: translate(0, -100%);
	}

	&__container {
		position: relative;
	}

	&__close {
		position: absolute;
		right: 0;
		top: 0;
		padding: 0 0.2em;
		background: none;
		border: 0;
		font-size: 22px;
		line-height: 1;
	}
}
