.nav {
	margin: 0 -.4em;

	&__item {
		display:inline-block;
		padding: 0 .4em;
	}

	&__label {
		+link-all-states() {
			font-size: normal_font;
			color: base_color;
		}
	}

	&__label.is-active {
		font-weight: bold;
	}
}

.page_inverted-head .nav__label {
	tweak-inverted-text();
	color: light_hover_color;
}
