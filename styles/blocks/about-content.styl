.about-content {
	padding-bottom: spacer;

	// Add padding to first and last columns to align gaps with .photo-grid
	+between(741px, 1024px) {
		.l-row {
			margin-side: (-(3*spacer));
		}
		.l-row > :first-child {
			padding-left: 3*spacer;
		}
		.l-row > :last-child {
			padding-right: 3*spacer;
		}
	}

	+below(740px) {
		.l-two-thirds,
		.l-third {
			width: 100%;
		}
	}
}
