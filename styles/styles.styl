body {
	background: bg_color;
	color: base_color;
	line-height: 1.5;
	padding: spacer 2*spacer;
	font-size: normal_font;
	if (max_width) {
		max-width: max_width;
		margin-left: auto;
		margin-right: auto;
	}
}

lightbox_button_width = 50px;
lightbox_button_height = 40px;
header_height = 40px;

lightbox-button-transition() {
	transition: all 333ms cubic-bezier(0.1, 0.25, 0.25, 1);
}

lightbox-button-glow() {
	color: light_hover_color;
	filter: drop-shadow(0 0 4px white(.4));
}

dark-link() {
	+link-non-hovers() {
		color: base_color;
	}
	+link-hovers() {
		color: dark_hover_color;
	}
}

// Fonts

body {
	font-family: "Helvetica Neue", Arial, sans-serif;
}


// Headers: alpha, beta, gamma, delta, epsilon, epsilon

alpha() {
	margin-left: -.1ex;
	font-size: 48px;
	font-weight: 300;
	line-height: 1.1;
}

beta() {
	margin-left: 0;
	font-size: 32px;
	font-weight: 300;
	line-height: 1.1;
}

gamma() {
	margin-left: 0;
	font-size: 24px;
	font-weight: 300;
	line-height: 1.1;
}

delta() {
	font-size: content_font;
	font-weight: bold;
	line-height: 1.3;
}


// Text

.text {
	h2 {
		beta();
		margin-top: 30px;
		margin-bottom: 15px;
	}
	h3 {
		delta();
		margin-top: 30px;
		margin-bottom: 15px;
	}

	li {
		margin-bottom: 10px;
	}

	// Default browser style is `bolder`, it’s not bold enough because main text’s weight is 300.
	b,
	strong {
		font-weight: bold;
	}

	// Floating images
	.left {
		float: left;
		margin-right: 1.5*spacer;
		margin-top: .25em;
	}
	.right {
		float: right;
		margin-left: 1.5*spacer;
		margin-top: .25em;
	}
}

.content-holder {
	max-width: 40em;
}

.is-fullscreen {
	overflow: hidden;
}

.is-pocketed {
	position: absolute;
	overflow: hidden;
	height: 0;
}
