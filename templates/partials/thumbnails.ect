<div class="thumbnails js-thumbs">
	<% for photo in @photos: %>
		<a href="<%= @url %>/<%= photo.slug %>" class="thumbnails__item">
			<%- @photo
				slug: photo.slug,
				size: 'thumb',
				alt: photo.title,
				className: 'js-img'
			%>
		</a>
	<% end %>
</div>

<script><%- @inlineFile 'build/album.js' %></script>
