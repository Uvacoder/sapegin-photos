<% extend '_page-with-title' %>

<%
@setPageType 'portfolio'
%>

<div class="albums">
	<% for album in @albums: %>
		<div class="albums__item album-thumbnail">
			<a class="album-thumbnail__link link link_quoted" href="<%- album.url %>">
				<%- @photo
					slug: album.cover,
					size: 'small',
					alt: album.title,
					className: 'album-thumbnail__img'
				%>
				<h2 class="album-thumbnail__title">
					<u><%= album.title %></u>
				</h2>
			</a>
		</div>
	<% end %>
</div>
