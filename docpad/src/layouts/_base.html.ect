<!doctype html>
<html lang="ru">
<head>
	<meta charset="utf-8">
	<title><%= @pageTitle() %></title>

	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="author" content="{{ site.title }}" />
	<meta name="description" content="<%= @pageDescription() %>">
	<meta name="twitter:card" content="summary">
	<meta name="twitter:site" content="@sapegin">
	<meta name="twitter:creator" content="@sapegin">
	<meta property="og:title" content="<%= @pageTitle() %>">
	<meta property="og:description" content="<%= @pageDescription() %>">
	<% if @isIndex(): %>
		<meta name="keywords" content="пейзаж, городской пейзаж, путешествия, тревел, природа, собаки, фото, фотография, артём сапегин, фотограф">
		<meta property="og:type" content="site">
		<meta property="og:url" content="http://birdwatcher.ru">
	<% end %>
	<% if @isPost(): %>
		<meta property="og:type" content="article">
		<meta property="og:url" content="http://birdwatcher.ru/<%= @documentUrl() %>">
		<meta property="og:title" content="<%- @document.title %>">
	<% end %>
	<!-- <meta property="og:image" content="/images/userpic.jpg"> -->
	<% if @document.noindex: %>
		<meta name="robots" content="noindex follow">
	<% end %>
	<%- @getBlock('meta').toHTML() %>

	<link href="<%- @fingerprint '/build/styles.css' %>" rel="stylesheet">
	<script src="<%- @fingerprint '/build/modernizr.js' %>"></script>

	<link rel="alternate" type="application/rss+xml" title="<%= @blogTitle %>" href="/feed/" />

	<script><%- @embedFile 'build/inlines/counters.js' %></script>
</head>
<body class="<%= @bodyClass() %>">

	<header class="header content">

		<% if @isIndex(): %>
			<h1 class="logo"><%= @siteTitle %></h1>
		<% else: %>
			<div class="logo">
				<a href="/" class="logo__link"><%= @siteTitle %></a>
			</div>
		<% end %>

		<nav class="nav">
			<ul>
			<% for url, title of @nav: %>
				<li class="nav__item">
					<% if @documentUrl() is url: %>
						<span class="nav__label is-active"><%= title %></a>
					<% else: %>
						<a class="nav__label <% if @documentUrl().indexOf(url) is 0: %>is-active<% end %>" href="<%- url %>"><%= title %></a>
					<% end %>
				</li>
			<% end %>
			</ul>
		</nav>

	</header>

	<%- @content %>

	<footer class="footer">
		<div class="copyrights content">© <a href="http://sapegin.ru/" class="link">Артём Сапегин</a>, 2004—<%= (new Date).getFullYear() %></div>
	</footer>

	<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
	<script src="<%- @fingerprint '/build/scripts.js' %>"></script>

</body>
</html>
